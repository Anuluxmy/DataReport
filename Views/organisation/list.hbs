<h3><a class="btn btn-secondary" href="/organisation"><i class="fa fa-plus"></i> Create New</a> Organisation List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year Founded</th>
            <th>Revenue</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.yearFounded}}</td>
            <td>{{this.revenue}}</td>
            <td>
                <a href="/organisation/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/organisation/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
